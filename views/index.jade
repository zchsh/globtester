extends layout

block content
  header
    .wrap
      h1 globtester
      h2
        | a little utility for testing #[a(href="https://github.com/isaacs/minimatch") minimatch]

  #main
    .field
      label minimatch string
      input.prompt(type='text', value='/**/*.js')

    .field
      label
        | testing against...
        small (each line is a new match, successful matches highlighted in blue)
      .results(contenteditable)
        div /Users/doge/very/amaze.js
        div /usr/local/bin/wow

    .align: .save save

  footer
    a(href='https://github.com/carrot/globtester', target='_blank')
      img(src='img/built-at-carrot.svg')
